<!doctype html>
<html lang="en">

<head>
    <title>Title</title>
    <link rel="stylesheet" href="/css/signup.css">
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
</head>

<body>

    <main>
        <div class="container ">
            <div class="dialog p-5">
                <h1>Sign Up ChatApp</h1>
                <form method="post" action="/api/auth/signup" class="mt-3">
                    <label for="fullName" class="form-lable mt-2">Full Name</label>
                    <input class="form-control w-100" type="text" name="fullName" placeholder="Enter FullName">
                    <label for="Username" class="form-lable mt-2">Username</label>
                    <input class="form-control w-100" type="text" name="username" placeholder="Enter Username">
                    <label for="Password" class="form-lable mt-2">Password</label>
                    <input class="form-control w-100" type="password" name="password" placeholder="Enter Password">
                    <label for="confirmPassword" class="form-lable mt-2">Confirm Password</label>
                    <input class="form-control w-100" type="password" name="confirmPassword"
                        placeholder="Enter confirm password">
                    <div class="row mt-2 mb-2">
                        <div class="col d-flex gap-2">
                            <h5>Male</h5>
                            <input type="checkbox" id="male" name="gender" value="male">
                        </div>
                        <div class="col d-flex gap-2">
                            <h5>
                                Female
                            </h5>
                            <input type="checkbox" id="female" name="gender" value="female">
                        </div>
                    </div>
                    <a class="text-secondary" href="/login">Already have account?</a>
                    <input class="mt-2 btn btn-outline-secondary w-100" type="submit" value="Sign Up">
                </form>
            </div>
        </div>
    </main>
    <script src="/js/signup.js"></script>
    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
</body>

</html>